@inherits LayoutComponentBase
@using SunriseSunsetApp.Components
@using SunriseSunsetApp.Models

<MudThemeProvider IsDarkMode=_isDarkMode />

<MudLayout>
    <MudAppBar Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.ColorLens" Color="Color.Default" OnClick="@((e) => ChangeThemeAsync())" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Rise - Set - Seasons <a href="#"></a></MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16" Value="@userAppInfo">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;
    bool _isDarkMode = true;

    private UserAppInfo userAppInfo = new();

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    private async Task ChangeThemeAsync()
    {
        await Task.Delay(500);
        _isDarkMode = !_isDarkMode;
    }
}